{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb",
		"plugin:jsx-ally/recomended",
		"plugin:react-hooks/recomended",
		"prettier"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "react-hooks", "prettier", "jsx-a11y", "import"],
	"rules": {
		"indent": ["error", 2],
		"prettier/prettier": "error",
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
